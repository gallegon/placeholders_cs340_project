<html>
<h3>Current users:</h3>
<table>
    <thead> 
        <th>UserID</th> 
        <th>First Name</th> 
        <th>Last Name</th>
    </thead> 
    <tbody>
        {{#each userInfo}} 
        <tr> 
            <td>{{userID}}</td> 
            <td>{{firstName}}</td> 
            <td>{{lastName}}</td> 
            <td><button onclick="deletePerson({{id}})">Delete</button></td>
            <td><a href="/people/{{id}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table>
<table>
    <thead> 
        <th>Followers</th> 
    </thead> 
    <tbody>
        {{#each followers}} 
        <tr> 
            <td>{{firstName}}</td> 
            <td>{{lastName}}</td> 
            <td><button onclick="deletePerson({{id}})">Delete</button></td>
            <td><a href="/people/{{id}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table>  
</html>