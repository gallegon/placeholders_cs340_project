<script src="deleteUser.js"></script>

<h3>Create User</h3>
<form id="add-user-form" method="POST" action="/users/add-user-form">
    <label for="input-fname">First Name: </label>
    <input type="text" name="input-fname" id="input-fname">
    
    <label for="input-lname">Last Name: </label>
    <input type="text" name="input-lname" id="input-lname">

    <label for="input-latitude">Latitude: </label>
    <input type="text" name="input-latitude" id="input-latitude">

    <label for="input-longitude">Longitude: </label>
    <input type="text" name="input-longitude" id="input-longitude">

    <input type="submit">
</form>

<h3>Current users:</h3>
<table class = "table">
    <thead>
        <tr> 
            <th scope="col">UserID</th> 
            <th scope="col">First Name</th> 
            <th scope="col">Last Name</th>
        </tr>
    </thead> 
    <tbody>
        {{#each userData}} 
        <tr> 
            <th scope="row">{{userID}}</td> 
            <td>{{firstName}}</td> 
            <td>{{lastName}}</td>
            <td><button class="btn btn-primary" onclick="location.href='/users/profile/{{userID}}'">Go to User Profile</button></td>
            <td><button class="btn btn-outline-danger" onclick="deleteUser({{userID}})">Delete</button></td>
            {{!--TODO: add delete AJAX request when update is implemented --}}
            <td><button class="btn btn-outline-secondary" onclick="location.href='/users/profile/{{userID}}'">Update</button></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table>